# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

GET     /                                   controllers.HomeController.index
GET     /getBooks                           controllers.BookController.getBooks()
GET     /getBooksByTitle/:title             controllers.BookController.getBooksByTitle(title:String)
GET     /getBooksByCategory/:category       controllers.BookController.getBooksByCategory(category:String)
GET     /getBooksByWriter/:firstName/:lastName        controllers.BookController.getBooksByWriter(firstName:String,lastName:String)
# Date format in path 2019-08-15
GET     /getBooksByPublishingDate/:publishingDate      controllers.BookController.getBooksByPublishingDate(publishingDate:String)
GET     /getBooksByPageNumber/:pageNumber             controllers.BookController.getBooksByPageNumber(pageNumber:Long)
GET     /getBooksByPrice/:price             controllers.BookController.getBooksByPrice(price:Long)
# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
