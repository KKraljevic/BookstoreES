# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

GET     /                               controllers.HomeController.index
GET     /books                          controllers.BookController.getBooks(size: Integer ?= 10, page: Integer ?= 1, sort: String ?="unitsSold",order: String ?="DESC")
GET     /books/agg/price                controllers.BookController.getAggPriceRange()
GET     /books/agg/publishingDate       controllers.BookController.getAggPublishingDateRange()
GET     /books/agg/categories           controllers.BookController.getAggCategories()
GET     /books/agg/top10                    controllers.BookController.getTop10()
GET     /books/search/:searchInput      controllers.BookController.searchBooks(searchInput:String, size: Integer ?= 10, page: Integer ?= 1, sort: String ?="unitsSold",order: String ?="DESC")
GET     /books/title/:title             controllers.BookController.getBooksByTitle(title:String, size: Integer ?= 10, page: Integer ?= 1, sort: String ?="unitsSold",order: String ?="DESC")
GET     /books/featured                 controllers.BookController.getFeaturedBooks(size:Integer  ?= 4)
GET     /books/:id                      controllers.BookController.getBooksById(id:Long)
GET     /books/category/:category       controllers.BookController.getBooksByCategory(category:String, size: Integer ?= 10, page: Integer ?= 1, sort: String ?="unitsSold",order: String ?="DESC")
GET     /books/writer/:firstName/:lastName                  controllers.BookController.getBooksByWriter(firstName:String, lastName:String, size: Integer ?= 10, page: Integer ?= 1, sort: String ?="unitsSold",order: String ?="DESC")
# Date format in path 2019-08-15
GET     /books/publishingDate/:publishingDate               controllers.BookController.getBooksByPublishingDate(publishingDate:String, size: Integer ?= 10, page: Integer ?= 1, sort: String ?="unitsSold",order: String ?="DESC")
GET     /books/publishingDate/:startDate/:endDate           controllers.BookController.getBooksByPublishingPeriod(startDate:String, endDate:String, size: Integer ?= 10, page: Integer ?= 1, sort: String ?="unitsSold",order: String ?="DESC")
GET     /books/pageNumber/:pageNumber                       controllers.BookController.getBooksByPageNumber(pageNumber:Integer, size: Integer ?= 10, page: Integer ?= 1, sort: String ?="unitsSold",order: String ?="DESC")
GET     /books/pageNumber/:minPages/:maxPages               controllers.BookController.getBooksByPageRange(minPages:Integer, maxPages:Integer,size: Integer ?= 10, page: Integer ?= 1, sort: String ?="unitsSold",order: String ?="DESC")
GET     /books/price/:price                                 controllers.BookController.getBooksByPrice(price:Integer, size: Integer ?= 10, page: Integer ?= 1, sort: String ?="unitsSold",order: String ?="DESC")
GET     /books/price/:minPrice/:maxPrice                    controllers.BookController.getBooksByPriceRange(minPrice:Integer, maxPrice:Integer,size: Integer ?= 10, page: Integer ?= 1, sort: String ?="unitsSold",order: String ?="DESC")
# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
